import { Button, ListView } from "std-widgets.slint";

component AppListView inherits ListView {
    in-out property <[string]> items: ["Get started"];

    for item in items: Text {
        text: item;
    }
}

export component AppWindow inherits Window {
    in-out property <[string]> items <=> app_listview.items;
    in-out property <string> input_text;
    callback request-add-item();


    VerticalLayout {
        TextInput {
           text <=> input_text;
        }

        Button {
            text: "Add";
            clicked => {
                root.request-add-item();
            }
        }

        app_listview := AppListView {}
    }
}
